<%-include('../partials/header')-%>
<section class="cabsec container">
 <% if(array.length === 0){ %>
   <h2>No products available!</h2>
     <% } %> 
        <% if(array.length != 0){ %>
         <div class="row">
          <% array.forEach(function(e){ %>
            <div class="col-lg-4 col-md-6">
              <div class="card">
                  <div class="card-header">
                    <%= e.Item_name %> 
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><%=e.Name%> </h5>
                    <h5 class="card-title"><%=e.Email%></h5>
                    <h5 class="card-title"><%= e.Phone_no %> </h5>
                    <p class="card-text"><%= e.Specifications %></p>
                    <div>
                      <% if(e.Image.length === 0){ %>
                        <h2>No images available!</h2>
                          <% } %> 
                      <% if(e.Image.length != 0){ %>
                      <h4>Images of the product:</h4>
                      <% e.Image.forEach(function(img){ %>
                            <img src="data:Image/<%= img.contentType %>;base64,<%= img.data.toString('base64') %>">
                     <% }) %> 
                      <% } %> 
                    </div>
                  </div>
                </div>
            </div>
          <% }) %>
        </div>      
      <% } %> 
</section>