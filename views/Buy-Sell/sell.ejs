<%-include('../partials/header')-%>
<section class="cabsec container">
    <form action="/sell" method="POST" autocomplete="off">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" placeholder="Enter your name" name="name">
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="email" class="form-control" placeholder="Enter email" name="email">
        </div>
        <div class="form-group">
            <label>Phone no.</label>
            <input type="tel" class="form-control" placeholder="Enter Phone no." name="phone_no">
        </div>
        <div class="form-group">
            <label>Hall</label>
            <input type="text" class="form-control" readonly value="6">
        </div>
        <div class="form-group">
            <label>Name of the Item</label>
            <input type="text" class="form-control" placeholder="Enter name of the item" name="item_name">
        </div>
        <label>Select Category:</label>
        <div class="form-group">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category"  value="Study_Material">
                <label class="form-check-label">Study Material</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category" value="Cycle">
                <label class="form-check-label">Cycle</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category"  value="Sports_Equipment">
                <label class="form-check-label">Sports Equipment</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category"  value="Apparel">
                <label class="form-check-label">Apparel</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category"  value="Others">
                <label class="form-check-label">Others</label>
              </div>
        </div>
        <div class="form-group">
            <label>Item Specifications:</label>
            <textarea rows="3" class="form-control" name="specifications"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      </section>
<%- include('../partials/footer')-%>
</body>
</html>